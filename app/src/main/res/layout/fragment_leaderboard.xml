<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ui.leaderboard.LeaderBoardFragment">

    <TextView
        android:id="@+id/comemorative_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham_bold"
        android:textColor="@color/azul"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/top_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="34dp"
        android:paddingEnd="34dp"
        app:layout_constraintBottom_toTopOf="@id/recycler_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comemorative_text">

        <androidx.cardview.widget.CardView
            android:id="@+id/podium"
            android:layout_width="290dp"
            android:layout_height="235dp"
            android:baselineAligned="false"
            android:clickable="false"
            android:focusable="false"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_gradient"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/podium_image"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:adjustViewBounds="false"
                    android:contentDescription="Pódio"
                    android:cropToPadding="false"
                    android:gravity="bottom"
                    android:scaleType="center"
                    android:src="@drawable/podium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/podium_2"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:baselineAligned="false"
                android:clickable="false"
                android:focusable="false"
                android:foreground="?attr/selectableItemBackground"
                android:translationX="20dp"
                android:translationY="60dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_gradient"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/podium_2_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:contentDescription="Ícone de Usuário"
                        android:src="@drawable/blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/podium_1"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:baselineAligned="false"
                android:clickable="false"
                android:focusable="false"
                android:foreground="?attr/selectableItemBackground"
                android:translationX="110dp"
                android:translationY="10dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_gradient"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/podium_1_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:contentDescription="Ícone de Usuário"
                        android:src="@drawable/blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/podium_3"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:baselineAligned="false"
                android:clickable="false"
                android:focusable="false"
                android:foreground="?attr/selectableItemBackground"
                android:translationX="205dp"
                android:translationY="105dp"
                app:cardCornerRadius="999dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_gradient"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/podium_3_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:contentDescription="Ícone de Usuário"
                        android:src="@drawable/blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_list"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="34dp"
        android:paddingEnd="34dp"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>