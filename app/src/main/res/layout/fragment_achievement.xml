<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="25dp"
    tools:context=".ui.achievements.AchievementsFragment">

    <ImageView
        android:id="@+id/chest_image"
        android:layout_width="277dp"
        android:layout_height="207dp"
        android:contentDescription="Ícone de Baú"
        android:src="@drawable/chest"
        app:layout_constraintBottom_toTopOf="@id/mid_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="34dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chest_image">

        <androidx.cardview.widget.CardView
            android:id="@+id/first"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:baselineAligned="false"
            android:clickable="false"
            android:focusable="false"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="999dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:id="@+id/loading"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                app:cardCornerRadius="999dp"
                android:background="@drawable/loading_gradient">

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_gradient"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/text_posicao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_nome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/text_pontos"
                    app:layout_constraintStart_toEndOf="@id/text_posicao"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_pontos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/second"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:baselineAligned="false"
            android:clickable="false"
            android:focusable="false"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="999dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:id="@+id/loading_second"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                app:cardCornerRadius="999dp"
                android:background="@drawable/loading_gradient">

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_gradient"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/text_2_posicao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_2_nome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/text_2_pontos"
                    app:layout_constraintStart_toEndOf="@id/text_2_posicao"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_2_pontos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/third"
            android:layout_width="360dp"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:baselineAligned="false"
            android:clickable="false"
            android:focusable="false"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="999dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:id="@+id/loading_third"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                app:cardCornerRadius="999dp"
                android:background="@drawable/loading_gradient">

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_gradient"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/text_3_posicao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_3_nome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/text_3_pontos"
                    app:layout_constraintStart_toEndOf="@id/text_3_posicao"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_3_pontos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="34dp"
        android:paddingEnd="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mid_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/podium"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:baselineAligned="false"
            android:clickable="false"
            android:focusable="false"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_gradient"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comemorative_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/azul"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toTopOf="@id/icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/icon"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:baselineAligned="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="999dp"
                    app:cardElevation="12dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintBottom_toTopOf="@id/position"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/comemorative_text">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_gradient"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <ImageView
                            android:id="@+id/icon_image"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:contentDescription="Ícone de Usuário"
                            android:src="@drawable/blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/position"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:baselineAligned="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="12dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/icon">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_gradient"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_position"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:fontFamily="@font/gotham_bold"
                            android:textColor="@color/azul"
                            android:textAlignment="center"
                            android:textSize="32sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>